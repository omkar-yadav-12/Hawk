<head>
    <!-- Material Design Lite CSS -->
    <link rel="stylesheet" href="https://storage.googleapis.com/code.getmdl.io/1.0.0/material.indigo-pink.min.css">
    <!-- Font Awesome CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <!-- Material Design icon font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<title>Register</title>
<style>
    .util-center {
        margin: auto;
    }

    .util-max-512px {
        max-width: 512px;
    }

    .util-spacing-h--40px {
        margin-top: 40px;
        margin-bottom: 40px
    }

    .util-no-decoration {
        text-decoration: none;
    }
    body{
        background-color:#1F2739;
    }
</style>

<body>
    <!-- REGISTER FORM -->
    <div class="mdl-grid">
        <div class="mdl-card mdl-shadow--16dp mdl-color--black util-center util-spacing-h--40px">
            <div class="mdl-card__title mdl-color--black">
                <h2 class="mdl-card__title-text mdl-color-text--yellow">Create a New Account</h2>
            </div>
            <div class="mdl-card__supporting-text mdl-grid">

                <b class="mdl-color-text--red">Must fill all fields</b>


                <form method="POST" action="/register=True">
                    <input type="hidden" name="action" value="register" />
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
                        <label class="mdl-textfield__label mdl-color-text--grey" for="first_name">First
                            Name</label>
                        <input class="mdl-textfield__input mdl-color-text--yellow" type="text" id="first_name" name="first_name"
                            pattern="^[A-z]{1,20}" required />
                        <span class="mdl-textfield__error">Characters only</span>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
                        <label class="mdl-textfield__label mdl-color-text--grey" for="last_name">Last
                            Name</label>
                        <input class="mdl-textfield__input mdl-color-text--yellow" type="text" id="last_name" name="last_name"
                            pattern="^[A-z]{1,20}" required />
                        <span class="mdl-textfield__error">Characters only</span>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
                        <label class="mdl-textfield__label mdl-color-text--grey" for="grade">Grade</label>
                        <input class="mdl-textfield__input mdl-color-text--yellow" type="text" id="grade" name="grade" pattern="^[0-9_-]{2,2}$"
                            required />
                        <span class="mdl-textfield__error">Numeric values only</span>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
                        <label class="mdl-textfield__label mdl-color-text--grey" for="email">Email</label>
                        <input class="mdl-textfield__input mdl-color-text--yellow" type="text" id="email" name="email"
                            pattern="^[A-z0-9_-@]{3,15}$" required />
                        <span class="mdl-textfield__error">Enter a valid email address</span>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
                        <label class="mdl-textfield__label mdl-color-text--grey" for="email ">Team Number</label>
                        <input class="mdl-textfield__input mdl-color-text--yellow" type="text" id="team" name="team" pattern="^[0-9]{5,5}$"
                            required />
                        <span class="mdl-textfield__error">Enter a 5 digit team number</span>
                    </div>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
                        <label class="mdl-textfield__label mdl-color-text--grey" for="password">Password</label>
                        <input class="mdl-textfield__input mdl-color-text--yellow"  id="password" name="password"
                            pattern="^[A-z0-9_-]{3,15}$" required />
                        <span class="mdl-textfield__error">
                            Must be between between 3-15 characters with letters and digits
                        </span>
                    </div>

                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
                        <label class="mdl-textfield__label mdl-color-text--grey" for="password_confirm">Password
                            Confirm</label>
                        <input class="mdl-textfield__input mdl-color-text--yellow"  id="password_confirm"
                            name="password_confirm" required />
                    </div>
                    <input
                        class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-color--black mdl-color-text--yellow"
                        type="submit" value="Register">
                    <a href="/login" id="backButton"
                        class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-color-text--yellow">
                        <i class="material-icons">arrow_back</i>
                    </a>
                </form>
            </div>
        </div>
    </div>


    <!-- Material Design Lite JavaScript -->
    <script src="https://storage.googleapis.com/code.getmdl.io/1.0.0/material.min.js"></script>
    <script type="text/javascript" src="/js/register.js"></script>
    <!--<script type="text/javascript" src="/app/controllers/function.js"></script> -->
</body>