<title>New Tournament</title>
<style>
    .util-center {
        margin: auto;
    }

    .util-max-512px {
        max-width: 512px;
    }

    .util-spacing-h--40px {
        margin-top: 40px;
        margin-bottom: 40px
    }

    .util-no-decoration {
        text-decoration: none;
    }
</style>

<body>
    <!-- REGISTER FORM -->

    <div class="mdl-grid">
        <div class="mdl-card mdl-shadow--16dp util-center util-spacing-h--40px">
            <div class="mdl-card__title mdl-color--black">
                <h2 class="mdl-card__title-text mdl-color-text--white">Add a New Tournament</h2>
            </div>
            <div class="mdl-card__supporting-text mdl-grid">
                <form method="POST" action="/tourney=True">
                    <input type="hidden" name="action" value="register" />
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
                        <label class="mdl-textfield__label mdl-color-text--grey" for="name">Name</label>
                        <input class="mdl-textfield__input" type="text" id="name" name="name"
                            pattern="^[a-zA-Z0-9\s]{1,20}" required />
                        <span class="mdl-textfield__error"></span>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
                        <label class="mdl-textfield__label mdl-color-text--grey" for="location">Location</label>
                        <input class="mdl-textfield__input" type="text" id="location" name="location"
                            pattern="^[a-zA-Z0-9\s]{3,15}$" required />
                        <span class="mdl-textfield__error"></span>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--12-col">
                        <input class="mdl-textfield__input" type="date" id="date" placeholder="<%=now%>">
                        <label class="mdl-textfield__label" for="date">Date</label>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-color-text--black">
                        <select class="mdl-textfield__input" id="type" name="type" required>
                            <option></option>
                            <option value="League">League</option>
                            <option value="Qualifier">Qualifier</option>
                            <option value="State">State</option>
                        </select>
                        <label class="mdl-textfield__label" for="type">Type</label>
                    </div>




                    <a href="/home" id="backButton"
                        class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-color-text--yellow">
                        <i class="material-icons">arrow_back</i>
                    </a>
                    <input
                        class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-color--black mdl-color-text--yellow"
                        type="submit" value="submit">
                </form>
            </div>
        </div>
    </div>


    <!-- Material Design Lite JavaScript -->
    <style>

    </style>
    <script>
        const picker = new MaterialDatePicker({})
            .on('submit', (d) => {
                output.innerText = d;
            });

        const el = document.querySelector('.c-datepicker-btn');
        el.addEventListener('click', () => {
            picker.open();
        }, false);

    </script>
    <script src="https://storage.googleapis.com/code.getmdl.io/1.0.0/material.min.js"></script>
    <script type="text/javascript" src="/js/register.js"></script>
